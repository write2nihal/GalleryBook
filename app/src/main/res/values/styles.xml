<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/dark_gray_status</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="NoActionBar.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RegistrationEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <color name="white">#ffffff</color>
    <color name="gray">#c4c4c4</color>
    <color name="dark_gray">#3f3f3f</color>
    <color name="dark_gray_status">#2a2a2a</color>
    <color name="black">#FF0E0D0D</color>



    <style name="Theme.GalleryBook" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.GalleryBook.NoActionBar.FullScreen" parent="@style/Theme.GalleryBook.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.GalleryBook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GalleryBook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GalleryBook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="input_style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>
